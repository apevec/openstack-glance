description "OpenStack Image Service (code-named Glance) API server"

start on stopped rc RUNLEVEL=[2345]
stop on runlevel [S016]

respawn

exec su -s /bin/sh -c "exec /usr/bin/glance-scrubber --daemon --config-file /usr/share/glance/glance-scrubber-dist.conf \
                       --config-file /etc/glance/glance-scrubber.conf" glance
